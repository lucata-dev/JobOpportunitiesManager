@model  IEnumerable <Domain.JobOpportunity>
@{
    ViewBag.Title = "Home Page";
}


<div class="jumbotron">
    <h1>Job Opportunities Manager</h1>
    <p class="lead">ASP.NET is a free web framework for building great Web sites and Web applications using HTML, CSS and JavaScript.</p>
    <p><a href="@Url.Action("Create", "JobOpportunity")" class="btn btn-primary btn-lg">Create &raquo;</a></p>
</div>

<div class="row">
    <div class="col-md-12">
        <h2>Last jobs</h2>
    </div>
    @foreach (var item in Model)
    {
    <div class="col-md-4">
        <div class="panel panel-default">
            <div class="panel-heading"><h4>@item.Title</h4></div>
            <div class="panel-body">
                <p>
                    @item.Salary
                </p>
            </div>
        </div>
    </div>
    }
</div>